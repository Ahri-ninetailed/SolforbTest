@{
    ViewData["Title"] = "Главная";

}

<div class="text-center">
    <div class="row">
        <div class="col-3">
            <a class="btn btn-primary" asp-controller="Create" asp-action="Index">
                Добавить заказ
            </a>
        </div>
        <div class="col-3">
            <button type="button" class="btn btn-primary">
                 Отфильтровать
            </button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <input type="date" id="firstDatePicker" value="@DateFormater.GetMonthAgoDateString()"/>
            <input type="date" id="secondDatePicker" value="@DateFormater.GetTodayDateString()" />
        </div>
        <div class="col">
            <select size="4" multiple>
                @*                <option value="volvo">Volvo</option>
                <option value="saab">Saab</option>
                <option value="opel">Opel</option>
                <option value="audi">Audi</option>*@
            </select>
        </div>
    </div>
    <div class="row">
        <table class="table table-hover">
            <thead>
               <tr>
                  <th scope="col">#</th>
                  <th scope="col">First</th>
                  <th scope="col">Last</th>
                  <th scope="col">Handle</th>
               </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>123</td>
                </tr>
                <tr onclick="location.href = '@Url.Action("Index", "Create")'">
                    <th scope="row">2</th>
                    <td>Jacob</td>
                    <td>Thornton</td>
                    <td>123</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td colspan="2">Larry the Bird</td>
                    <td>123</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
